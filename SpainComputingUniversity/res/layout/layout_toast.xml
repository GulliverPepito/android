<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dip" android:background="#555555" 
    android:orientation="horizontal" 
    android:layout_height="250dip" 
    android:layout_width="300dip"
    android:layout_gravity="center" 
    android:id="@+id/lytLayout">


		<TextView android:gravity="bottom|left" android:layout_width="wrap_content"
			android:id="@+id/txtMensaje" android:layout_height="wrap_content"
			android:textStyle="bold" android:paddingLeft="10dip"
			android:textColor="#FFFFFF" 
			android:layout_gravity="center_vertical" />


		<ImageView android:id="@+id/imagenToast" android:src="@drawable/icon"
			android:contentDescription="@string/InfoAplicacion"
			android:layout_gravity="center" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />


</LinearLayout>
